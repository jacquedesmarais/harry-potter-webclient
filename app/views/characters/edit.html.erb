<h1>Edit Character</h1>

<%= form_tag "/characters/#{@character['id']}", method: :patch do %>
  <form>
  <div class="form-group">
    <label for="first_name">First Name: </label>
    <input type="text" name="first_name" value="<%= @character['first_name'] %>">
  </div>
  <br>
  <div class="form-group">
    <label for="last_name">Last Name: </label>
    <input type="text" name="last_name" value="<%= @character['last_name'] %>">
  </div>
  <br>
  <div class="form-group">
    <label for="house">House: </label>
    <input type="text" name="house" value="<%= @character['house'] %>">
  </div>
  <br>
    <button class="btn btn-success" type="submit" class="btn btn-default">Add Character</button>
  </form>
<% end %>